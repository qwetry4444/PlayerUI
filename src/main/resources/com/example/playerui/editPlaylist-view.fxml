<AnchorPane prefHeight="628.0" prefWidth="363.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.playerui.EditPlaylistView">
   <children>
      <HBox alignment="CENTER" layoutX="24.0" layoutY="38.0" prefHeight="49.0" prefWidth="320.0" spacing="32.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonAction" prefHeight="25.0" prefWidth="55.0" text="Назад" />
            <Label prefHeight="47.0" prefWidth="227.0" text="Редактирование плейлиста">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" layoutX="49.0" layoutY="193.0" prefHeight="365.0" prefWidth="288.0">
         <children>
            <VBox prefHeight="64.0" prefWidth="282.0">
               <children>
                  <Label text="Название плейлиста" />
                  <TextField fx:id="playlistNameField" maxWidth="180.0" minHeight="-Infinity" minWidth="100.0" prefHeight="25.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox prefHeight="162.0" prefWidth="282.0">
               <children>
                  <Label text="Добавить песни" />
                  <TableView fx:id="songsTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="221.0" prefWidth="288.0">
                     <columns>
                        <TableColumn fx:id="songId" prefWidth="46.0" text="id" />
                        <TableColumn fx:id="songName" prefWidth="138.0" text="Название" />
                        <TableColumn fx:id="songArtist" prefWidth="101.0" text="Исполнитель" />
                     </columns>
                     <VBox.margin>
                        <Insets bottom="32.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButtonAction" text="Сохранить">
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
